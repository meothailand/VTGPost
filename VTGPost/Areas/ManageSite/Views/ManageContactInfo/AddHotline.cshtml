@model VTGPost.Models.HotLine

@{
    Layout = "~/Areas/ManageSite/Views/Shared/_ManageSiteLayout.cshtml";
}

@section CustomStyle{
    <link rel="stylesheet" type="text/css" href="@Href("~/Content/backend/plugins/bootstrap-switch/static/stylesheets/bootstrap-switch-metro.css")" />
}

@section CustomScript{
    <script src="@Href("~/Content/backend/plugins/bootstrap-switch/static/js/bootstrap-switch.min.js")" type="text/javascript"></script>
}

<div class="portlet box messageBox">
     <span class="messageBox">@ViewBag.SaveMessage</span>
</div>
<div class="portlet box yellow">
<div class="portlet-title">
    <div class="caption">
       <i class="fa fa-reorder"></i>Hotline - Thêm thông tin liên hệ									
    </div>
    <div class="tools">
        <a href="javascript:;" class="collapse"></a>
    </div>
</div>
<div class="portlet-body form">
    <!-- BEGIN FORM-->
    @using (Html.BeginForm("AddHotline", "ManageContactInfo", FormMethod.Post, new { @class="form-horizontal"})){
        <div class="form-actions top fluid">
            <div class="col-md-offset-3 col-md-9">
                <button type="submit" class="btn green">Submit</button>
                <button type="button" class="btn default" onclick="javascript:window.location.href='/ManageSite/ManageContactInfo/Hotlines';">Cancel</button>
            </div>
        </div>
        <div class="form-body">
           @Html.HiddenFor(i => i.Id)
            <div class="form-group">
                <label class="col-md-3 control-label">Display Text (Tên hiển thị)</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(i => i.DisplayText, new { @class = "form-control", @placeholder = "Enter text", @maxlength = "50" })
                    @*<span class="help-block">A block of help text.
                    </span>*@
                </div>
                <label class="col-md-2 control-label">Login name (Tên đăng nhập)</label>
                <div class="col-md-3">
                    @Html.TextBoxFor(i => i.LoginName, new { @class="form-control", @placeholder="Enter text", @maxlength="20"})
                    @*<span class="help-block">A block of help text.
                    </span>*@
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Line type (Loại dịch vụ)</label>
                <div class="col-md-9">
                    <div class="make-switch" data-on-label="&nbsp;Skype&nbsp;Account&nbsp;" data-off-label="&nbsp;Yahoo&nbsp;Account&nbsp;">
                        @if(Model == null || Model.LineType == "Skype"){
                            @Html.CheckBox("lineType", new { @class = "toggle", @checked="checked" })
                        }else{
                            @Html.CheckBox("lineType", new { @class = "toggle" })
                        }
                        @*<input type="checkbox" checked class="toggle" />*@
                    </div>
                </div>
            </div>
        </div>
        <div class="form-actions fluid">
            <div class="col-md-offset-3 col-md-9">
                <button type="submit" class="btn green">Submit</button>
                <button type="button" class="btn default" onclick="javascript:window.location.href='/ManageSite/ManageContactInfo/Hotlines';">Cancel</button>
            </div>
        </div>
    }
    <!-- END FORM-->
</div>
								
</div>
