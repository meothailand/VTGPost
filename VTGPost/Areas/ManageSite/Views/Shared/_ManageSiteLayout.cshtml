<div class="clearfix">
</div>
<!-- BEGIN CONTAINER -->
<div class="page-container">
	<!-- BEGIN SIDEBAR -->
	<div class="page-sidebar-wrapper">
		<div class="page-sidebar navbar-collapse collapse">
			<!-- BEGIN SIDEBAR MENU -->
			<ul class="page-sidebar-menu">
				<li class="sidebar-toggler-wrapper">
					<!-- BEGIN SIDEBAR TOGGLER BUTTON -->
					<div class="sidebar-toggler hidden-phone">
					</div>
					<!-- BEGIN SIDEBAR TOGGLER BUTTON -->
				</li>
				<li class="start active">
                <a href="javascript:void();">
                    <i class="fa fa-cogs"></i>
                    <span class="title">
                        Admin Menu
                    </span>
                    <span class="arrow ">
                    </span>
                </a>
                    <ul class="sub-menu">
                    @{
                        foreach(var menu in user.AccessLists)
                        {
                            <li class="@(menu.IsAccessed ? "open" : "")">
                            <a href="javascript:void();">
                                <i class="fa fa-cogs"></i>
                                <span class="title">
                                    @menu.Menu
                                </span>
                                <span class="arrow @(menu.IsAccessed ? "open" : "")"></span>
                            </a>
                                <ul class="sub-menu" style="@(menu.IsAccessed ? "display:block;" : "")">
                                    @foreach(var submenu in menu.Children)
                                    {
                                        if (!submenu.IsActie){ continue;}
                                        <li>
                                            <a href="@submenu.Action">
                                                @submenu.Menu</a>
                                        </li>
                                    }
                                </ul>
						</li>
                        }
                    }
                    </ul>
			<!-- END SIDEBAR MENU -->
		</div>
	</div>
	<!-- END SIDEBAR -->
	<!-- BEGIN CONTENT -->
	<div class="page-content-wrapper">
		<div class="page-content">
            @RenderBody()
		</div>
